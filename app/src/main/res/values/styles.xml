<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BarButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans__bold</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="OpenSans">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="OpenSans.SemiBold">
        <item name="android:fontWeight">600</item>
        <item name="fontWeight">600</item>
        <item name="android:fontFamily">@font/open_sans__semi_bold</item>
    </style>

    <style name="OpenSans.SemiBold.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OpenSans.SemiBold.Regular">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BusinessProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:minHeight">4dp</item>
    </style>

</resources>
